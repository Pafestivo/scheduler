{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "backend",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "diagnostics": true
    // "resolveJsonModule": true
  },
  "include": ["./backend/**/*"],
  "exclude": ["node_modules"]
}
